<div class="container">
  <h1 class="text-center">Our Restaurants</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>

    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('https://images.pexels.com/photos/1528013/pexels-photo-1528013.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260');">
        <div class="card-description">
          <h2>Name</h2>
          <p>Address</p>
        </div>

        <%= link_to "", restaurant_path(restaurant), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
